@model ResendLinkViewModel

@{
    ViewData["Title"] = "Resend Confirmation Link";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>


    .resend-container {
        max-width: 420px;
        margin: 80px auto;
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        padding: 40px 35px;
        text-align: center;
        transition: all 0.3s ease;
    }

        .resend-container:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    .resend-title {
        font-size: 1.6rem;
        font-weight: 700;
        color: #4f46e5;
        margin-bottom: 15px;
    }

    .resend-text {
        font-size: 0.95rem;
        color: #555;
        margin-bottom: 25px;
    }

    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        color: #333;
        display: block;
        margin-bottom: 8px;
    }

    input[type="email"] {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 0.95rem;
        transition: 0.2s;
    }

        input[type="email"]:focus {
            outline: none;
            border-color: #4f46e5;
            box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.2);
        }

    .btn-primary {
        background: linear-gradient(135deg, #4f46e5, #6d28d9);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        transition: 0.3s;
        width: 100%;
        cursor: pointer;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #4338ca, #5b21b6);
        }

    .text-success {
        margin-top: 20px;
        color: #10b981;
        font-weight: 600;
        background-color: #ecfdf5;
        padding: 10px;
        border-radius: 8px;
    }

    .validation-summary {
        
        background-color: #fee2e2;
        color: #b91c1c;
        border: 1px solid #fca5a5;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 0.9rem;
        text-align: left;
    }

   


</style>

<script>
    const form = document.querySelector("form");
    const button = document.querySelector(".btn-primary");

    form.addEventListener("submit", () => {
        button.disabled = true;
        button.textContent = "Sending...";
    });
</script>


<div class="resend-container">
    <h2 class="resend-title">Resend Confirmation Link</h2>
    <p class="resend-text">Enter your registered email address below and we’ll send you a new confirmation link.</p>

    <form asp-action="ResendLink" method="post">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="example@email.com" />
            <span asp-validation-for="Email" class="text-danger"></span>


        </div>
        <button type="submit" class="btn btn-primary">Send Link</button>
    </form>

    @if (Model != null)
    {
        <p class="text-success">@ViewBag.Message</p>
    }
</div>
