@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<style>
    .text-danger {
        color: #ff4d4d !important;
    }
</style>

<form asp-action="ResetPassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div hidden>
        <input asp-for="Token" />
        <input asp-for="Email" />
    </div>

    <div class="input-box">
        <input type="password" asp-for="Password" id="Password" placeholder="NewPassword" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>


    <div class="input-box">
        <input type="password" asp-for="ConfirmPassword" id="confirmPassword" placeholder="Confirm Password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btnn">Reset</button>

</form>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}


