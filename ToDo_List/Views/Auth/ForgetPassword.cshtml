@model ForgetPasswordViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>

    .resend-container {
        position: relative;
        width: 300px;
        background: transparent;
        border: 2px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(13px);
        padding: 40px 35px;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        color: #fff;
        animation: fadeIn 0.8s ease-in-out;
        margin: 120px auto;
    }


        .resend-container:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    .resend-title {
        font-size: 1.6rem;
        font-weight: 700;
        color: #c1bee8;
        margin-bottom: 15px;
        margin-top: 35px;
    }

    .resend-text {
        font-size: 0.95rem;
        color: #aba6a6;
        margin-bottom: 25px;
    }

    .email-text {
        font-size: 1rem;
        color: #b8d1cd;
    }
    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        color: #333;
        display: block;
        margin-bottom: 8px;
    }

    input[type="email"] {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 0.95rem;
        transition: 0.2s;
    }

        input[type="email"]:focus {
            outline: none;
            border-color: #4f46e5;
            box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.2);
        }

    .btn-primary {
        background: linear-gradient(135deg, #4f46e5, #6d28d9);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        transition: 0.3s;
        width: 100%;
        cursor: pointer;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #4338ca, #5b21b6);
        }

    .text-success {
        margin-top: 20px;
        color: #10b981;
        font-weight: 600;
        background-color: #ecfdf5;
        padding: 10px;
        border-radius: 8px;
    }

    .validation-summary {
        background-color: #fee2e2;
        color: #b91c1c;
        border: 1px solid #fca5a5;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 0.9rem;
        text-align: left;
    }

    .back-btn {
        position: absolute;
        top: 18px;
        left: 18px;
        color: #fff;
        font-size: 16px;
        font-weight: 600;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.25);
        padding: 6px 12px;
        border-radius: 25px;
        text-decoration: none;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }

        .back-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            color: #a7c7ff;
            transform: translateX(-3px);
        }


</style>


<div class="resend-container">
    <button type="button" class="back-btn" onclick="history.back()">←</button>

    <h3 class="resend-title">Reset Password</h3>
    <p class="resend-text">Enter your Email</p>

    <form asp-action="ForgetPassword" method="post">
        <div class="form-group">
            <label for="email" class="email-text">Email address</label>
            <input asp-for="Email" class="form-control" placeholder="example@email.com" />
            <span asp-validation-for="Email" class="text-danger"></span>


        </div>
        <button type="submit" class="btn btn-primary">Send</button>

    </form>
    @if (Model != null)
    {
        <p class="text-success">@ViewBag.Message</p>
    }
   
</div>


