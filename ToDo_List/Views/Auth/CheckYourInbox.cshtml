@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="check-inbox-container">
    <div class="check-card">
        <h1>📬 Check Your Inbox</h1>
        <p>We've sent a confirmation link to your email. Please check your inbox or spam folder.</p>

        <form asp-action="ResendLink" method="get">
            <button type="submit" class="resend-btn">Resend Link</button>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .check-inbox-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .check-card {
            background: transparent;
            border: 2px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(13px);
            padding: 40px 50px;
            border-radius: 16px;
            text-align: center;
            color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            animation: fadeIn 0.8s ease-in-out;
        }

            .check-card h1 {
                font-size: 32px;
                margin-bottom: 15px;
            }

            .check-card p {
                color: #dcdcdc;
                font-size: 15px;
                margin-bottom: 25px;
            }

        .resend-btn {
            background: #ffffff;
            color: #0a2862;
            border: none;
            border-radius: 25px;
            font-size: 15px;
            padding: 10px 25px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s;
        }

            .resend-btn:hover {
                background: #a7c7ff;
                color: #0a2862;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

